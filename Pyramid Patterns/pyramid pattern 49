#include <stdio.h>

int main()
{
    int n=4,i,j,l;
    char k='a'+n;
    for(i=1;i<=n;i++)
    {
        k='A'+n-1;
        for(j=0;j<i;j++)
        {
                printf("%c",k);
                k--;
        }
        printf("\n");
    }
    for(i=1;i<=n;i++)
    {
        k='A'+n-1;
        for(j=i;j<n;j++)
        {
                printf("%c",k);
                k--;
        }
        printf("\n");
    }
    return 0;
}
